<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="emptyState"
            type="com.rok.mymobilewallet.entity.EmptyState" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{emptyState.icon}"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            style="@style/text.large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_units_quadruple"
            android:text="@{emptyState.title}"
            tools:text="Title" />

        <TextView
            style="@style/text.gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eight_units_double"
            android:text="@{emptyState.description}"
            tools:text="Description" />

    </LinearLayout>
</layout>