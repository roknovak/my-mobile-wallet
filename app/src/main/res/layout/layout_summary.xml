<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="sum"
            type="float" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/eight_units_single"
        android:paddingLeft="@dimen/eight_units_double"
        android:paddingRight="@dimen/eight_units_double"
        android:paddingTop="@dimen/eight_units_single">

        <TextView
            style="@style/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/eight_units_triple"
            android:layout_toStartOf="@+id/tv_amount"
            android:text="@string/summary"
            android:textStyle="bold"
            tools:text="Title" />

        <TextView
            android:id="@+id/tv_amount"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            app:amount="@{sum}"
            tools:text="0.00" />

    </RelativeLayout>
</layout>